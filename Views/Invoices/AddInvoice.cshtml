@model DBProgramming_Class_2.Models.AllDataList
@{
    ViewBag.Title = "AddInvoice";
}

<h2>AddInvoice</h2>

@using (Html.BeginForm("AddInvoice", "Invoices", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Invoices.InvoiceID)
    @

    <div class="container-fluid">
        <div>
            <h2>Add / Edit Invoice</h2>
        </div>

        <div class="row">
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.InvoiceLineItems.ProductCode, new SelectList(Model.productsList, "ProductCode", "Description"), new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.InvoiceLineItems.Quantity, new { @class = "form-control" })
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-md-6">
                    <input type="submit" value="Submit" />
                </div>
                <div class="col-md-6">
                    @Html.ActionLink("Retrun to List", "CustomerList", "Customers", new { id = 0 }, new { @class = "return" })
                </div>
            </div>
        </div>
    </div>
}


